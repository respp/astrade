# AsTrade Backend Environment Configuration
# Copy this file to .env and update the values

# ==========================================
# APPLICATION SETTINGS
# ==========================================
DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production-12345
HOST=0.0.0.0
PORT=8000
WORKERS=1

# ==========================================
# SUPABASE CONFIGURATION (REQUIRED)
# ==========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key
POSTGRES_PORT=5433

# ==========================================
# EXTENDED EXCHANGE API (REQUIRED - use placeholders for dev)
# ==========================================
EXTENDED_ENVIRONMENT=testnet  # testnet or mainnet
EXTENDED_API_KEY=your-extended-api-key-here
EXTENDED_SECRET_KEY=your-extended-secret-key-here
EXTENDED_SECRET_PUBLIC_KEY=your-public-key-here
EXTENDED_STARK_PRIVATE_KEY=your-stark-private-key-here
EXTENDED_VAULT_ID=0
EXTENDED_MOCK_ENABLED=false

# ==========================================
# STARK TRADING CLIENT (OPTIONAL for dev)
# ==========================================
STARK_API_KEY=your-stark-api-key-here
STARK_PUBLIC_KEY=your-stark-public-key-here
STARK_PRIVATE_KEY=your-stark-private-key-here
STARK_VAULT=your-stark-vault-id

# ==========================================
# DATABASE (OPTIONAL - use Supabase instead)
# ==========================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/astrade

# ==========================================
# REDIS (OPTIONAL)
# ==========================================
REDIS_URL=redis://localhost:6379/0

# ==========================================
# CLOUDINARY (OPTIONAL - for image uploads)
# ==========================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ==========================================
# RATE LIMITING (OPTIONAL)
# ==========================================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60

# ==========================================
# LOGGING (OPTIONAL)
# ==========================================
LOG_LEVEL=INFO

# ==========================================
# CORS ORIGINS (OPTIONAL)
# ==========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com 